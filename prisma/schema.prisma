generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  email     String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
}

model Book {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  ISBN    Int    @unique
  title   String
  author  String
  summary String
  image   String
  price   Json
}

model Course {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  title    String @unique
  subtitle String
  isbn13   String
  price    String
  image    String
  url      String
}
